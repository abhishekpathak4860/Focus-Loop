{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",               /* Root is the backend folder itself */
    "outDir": "./dist",             /* Output goes to dist */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["app.ts", "src/**/*", "prisma.config.ts"],  /* app.ts + src folder ke andar ka maal */
  "exclude": ["node_modules", "dist"]
}